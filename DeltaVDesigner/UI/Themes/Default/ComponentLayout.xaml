<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:core="clr-namespace:System;assembly=mscorlib"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:presentationOptions="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"  
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
	mc:Ignorable="presentationOptions"
	>

	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="Colors.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<SolidColorBrush x:Key="ComponentLayoutBackgroundBrush" Color="{StaticResource Gray100}" />

	<Pen x:Key="ComponentLayoutComponentPen" Brush="{StaticResource Gray00Brush}" Thickness="1" presentationOptions:Freeze="true" />
	<SolidColorBrush x:Key="ComponentLayoutComponentFill" Color="{StaticResource Gray90}" />

	<Thickness x:Key="ComponentLayoutPadding">8,8,8,8</Thickness>
	<core:Double x:Key="ComponentLayoutAnglePadding">8</core:Double>

	<SolidColorBrush x:Key="ComponentLayoutIdTextBrush" Color="{StaticResource Gray60}" />
	<core:Double x:Key="ComponentLayoutIdTextSize">10</core:Double>
	<core:String x:Key="ComponentLayoutIdTextTypeface">Verdana</core:String>

	<SolidColorBrush x:Key="ComponentLayoutLabelTextBrush" Color="{StaticResource Gray20}" />
	<core:Double x:Key="ComponentLayoutLabelTextSize">12</core:Double>
	<core:String x:Key="ComponentLayoutLabelTextTypeface">Verdana</core:String>

</ResourceDictionary>